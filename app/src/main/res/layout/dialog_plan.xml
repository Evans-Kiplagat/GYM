<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details"
        android:layout_margin="17dp"
        android:text="Enter Details"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTrainingName"
        android:layout_below="@id/details"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:text="Training Name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txthowLong"
        android:layout_below="@id/txtTrainingName"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:text="how long will you take to complete this activity?"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/minutes"
        android:layout_below="@id/txthowLong"
        android:layout_centerHorizontal="true"
        android:hint="MINUTES"
        android:inputType="number"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtviewforspi"
        android:layout_below="@id/minutes"
        android:layout_margin="10dp"
        android:text="Select the day"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@id/txtviewforspi"
        android:layout_centerHorizontal="true"
        android:entries="@array/Days"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Dismiss"
            android:text="DISMISS"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toRightOf="@id/Dismiss"
            android:id="@+id/Add"
            android:text="ADD"
            android:layout_marginLeft="16dp" />


    </RelativeLayout>






</RelativeLayout>