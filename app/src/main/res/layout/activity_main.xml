<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnallgym"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:text="all gym sport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="added gym"
        app:layout_constraintEnd_toEndOf="@+id/btnallgym"
        app:layout_constraintStart_toStartOf="@+id/btnallgym"
        app:layout_constraintTop_toBottomOf="@+id/btnallgym" />

    <Button
        android:id="@+id/btnabout"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="about"
        app:layout_constraintEnd_toEndOf="@+id/btnadd"
        app:layout_constraintStart_toStartOf="@+id/btnadd"
        app:layout_constraintTop_toBottomOf="@+id/btnadd" />
</androidx.constraintlayout.widget.ConstraintLayout>